{
  "name": "price-bot",
  "version": "0.2.0",
  "description": "Headless price watcher for used music gear across marketplaces with Discord alerts",
  "author": "Todd Greco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrballistic/price-bot.git"
  },
  "keywords": [
    "price-watcher",
    "reverb",
    "ebay",
    "amazon",
    "discord",
    "music-gear",
    "synth",
    "deals"
  ],
  "private": true,
  "type": "commonjs",
  "main": "dist/run.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "node dist/run.js",
    "dev": "ts-node src/run.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.config.ts": [
      "prettier --write"
    ]
  }
}
