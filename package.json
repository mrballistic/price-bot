{
  "name": "price-bot",
  "version": "0.1.1",
  "description": "Headless price watcher for used music gear across marketplaces with Discord alerts",
  "author": "Todd Greco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrballistic/price-bot.git"
  },
  "keywords": [
    "price-watcher",
    "reverb",
    "ebay",
    "amazon",
    "discord",
    "music-gear",
    "synth",
    "deals"
  ],
  "private": true,
  "type": "commonjs",
  "main": "dist/run.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "node dist/run.js",
    "dev": "ts-node src/run.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier -w ."
  },
  "dependencies": {
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
